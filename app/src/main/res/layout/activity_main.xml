<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:background="@drawable/bc1"
    android:alpha="0.85">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom View Option"
        android:textSize="35sp"
        android:fontFamily="cursive"
        android:textFontWeight="900"
        android:textColor="@android:color/background_dark"
        android:gravity="center"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Custom Button "
        android:textSize="25sp"
        android:fontFamily="cursive"
        android:textFontWeight="900"
        android:textColor="@android:color/background_dark"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:id="@+id/customButton"
        android:background="@drawable/options"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_directions_bike_black_24dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Custom CheckBox"
        android:textSize="25sp"
        android:fontFamily="cursive"
        android:textFontWeight="900"
        android:textColor="@android:color/background_dark"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/customCheck"
        android:background="@drawable/options"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_check_box_black_24dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Custom RadioButton "
        android:textSize="25sp"
        android:fontFamily="cursive"
        android:textFontWeight="900"
        android:textColor="@android:color/background_dark"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/customRadio"
        android:background="@drawable/options"
        android:drawableLeft="@drawable/ic_radio_button1_checked_black_24dp"
        android:padding="10dp"/>

</LinearLayout>