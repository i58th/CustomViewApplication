<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckActivity"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:background="@drawable/bc1"
    android:alpha="0.85">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_dark"
        android:text="Custom CheckBox"
        android:fontFamily="cursive"
        android:textFontWeight="900"
        android:textSize="40sp"
        android:layout_gravity="center" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:text="Normal Option"
            android:fontFamily="cursive"
            android:textFontWeight="900"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp"/>
        <CheckBox
            android:id="@+id/normal"
            android:layout_marginLeft="40dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_gravity="center"
            android:text="Square Option"
            android:fontFamily="cursive"
            android:textFontWeight="900"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp"/>
        <CheckBox
            android:id="@+id/square"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:button="@drawable/square"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_gravity="center"
            android:text="Star Option"
            android:fontFamily="cursive"
            android:textFontWeight="900"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp"/>
        <CheckBox
            android:id="@+id/star"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:button="@drawable/star"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_gravity="center"
            android:text="Tick Option"
            android:fontFamily="cursive"
            android:textFontWeight="900"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp"/>
        <CheckBox
            android:id="@+id/tick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:button="@drawable/tick"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_gravity="center"
            android:text="Cancel Option"
            android:fontFamily="cursive"
            android:textFontWeight="900"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp"/>
        <CheckBox
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:button="@drawable/cancel"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_gravity="center"
            android:text="Round Option"
            android:fontFamily="cursive"
            android:textFontWeight="900"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp"/>
        <CheckBox
            android:id="@+id/round"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:button="@drawable/roundch"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    >
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:layout_gravity="center"
        android:text="cloud Option"
        android:fontFamily="cursive"
        android:textFontWeight="900"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"/>
    <CheckBox
        android:id="@+id/cloud"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:button="@drawable/cloud"
        android:clickable="true"
        android:focusable="true"
        android:layout_gravity="center"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_gravity="center"
            android:text="Update Option"
            android:fontFamily="cursive"
            android:textFontWeight="900"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp"/>
        <CheckBox
            android:id="@+id/update"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:button="@drawable/down"
            android:clickable="true"
            android:focusable="true"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>